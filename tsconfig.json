{
    "compilerOptions": {
        "target": "es2017",
        "outDir": "./build",
        "allowJs": false,
        "module": "commonjs",
        "strict": true, /* Enable all strict type-checking options. */
        "noImplicitAny": true, /* Raise error on expressions and declarations with an implied 'any' type. */
        "lib": [
            "es2017",
            "es2016",
            "es2015.promise",
            "dom",
            "dom.iterable"
        ],
        "baseUrl": "./"
    },
    "include": [
        "./**/*",
    ],
    "exclude": [
        "node_modules",
        "build",
        "test_output"
    ]
}